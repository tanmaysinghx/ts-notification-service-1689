generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model NotificationLog {
  id         Int      @id @default(autoincrement())
  gearId     String
  scenarioId String
  userEmail  String
  otp        String
  sentAt     DateTime @default(now())
}

model EmailTemplate {
  id         Int    @id @default(autoincrement())
  gearId     String
  scenarioId String
  subject    String
  content    String
}
